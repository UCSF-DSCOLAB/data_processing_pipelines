conda.enabled = true

executor {

  $local {
      cpus = 92
      memory = '314 GB'
  }
}

params {
    input               = "sample_sheet.csv"
    tmp_dir             = "/path/to/scratch"
    results_directory   = "/path/to/output/directory"  
    genome              = "/path/to/reference/directory/GCF_000001405.40_GRCh38.p14_genomic.fna"
    genome_idx          = "/path/to/reference/directory/GCF_000001405.40_GRCh38.p14_genomic.fna.fai"
    genome_dict         = "/path/to/reference/directory/GCF_000001405.40_GRCh38.p14_genomic.dict"
    genome_dir          = "/path/to/reference/directory/genome_dir"
    gtf                 = "/path/to/reference/directory/GCF_000001405.40/genomic.gtf" 
    transcript_fasta    = "/path/to/reference/directory/genome_dir/rsem_genome.transcripts.fa"
    salmon_quant_libtype= null
    fragment_length_mean= 200
    fragment_length_std = 20
    gtf_extra_attributes= 'gene_name'
    gtf_group_features  = 'gene_id'
    gatk_vf_cluster_size= 3
    gatk_vf_window_size = 35
    gatk_vf_fs_filter   = 30.0
    gatk_vf_qd_filter   = 2.0
    umitools_dedup_stats= false
    filter_rrna         = false
    dbsnp               = "/path/to/reference/directory/GCF_000001405.40/GCF_000001405.40.gz"
    dbsnp_tbi           = "/path/to/reference/directory/GCF_000001405.40/GCF_000001405.40.gz.tbi"
    format_contigs      = false
    contig_format_map   = "/path/to/reference/directory/GCF_000001405.40_GRCh38.p14_assembly_report.ucsc_style_chrm_names.txt"
    rrna_db_file        = "/path/to/reference/directory/ribosomal_rna/rrna_db.txt"
    adapter_sequence_1  = "CTGTCTCTTATACACATCT"
    adapter_sequence_2  = "CTGTCTCTTATACACATCT"
}