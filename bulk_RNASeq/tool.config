

// define reference directories
KLAB="/krummellab/data1"
params {
  dirs {
       singularity = "${KLAB}/singularity_images/"
       genome = "${KLAB}/immunox/refs/GRCh38_p13_files/"
  }
}


// list the reference info
params {
 ref {
    genome_version                  = 'hg38'
    adapter_seq1                    = 'CTGTCTCTTATACACATCT'
    adapter_seq2                    = 'CTGTCTCTTATACACATCT'
    rsem_star_transcript_ref_dir    = "${params.dirs.genome}/rsem_chr/"
    rsem_star_transcript_ref_prefix = "hg38"
    genome_flat_ref_dir             = "${params.dirs.genome}"
    genome_flat_ref_filename        = "gencode.v38.annotation_flat.txt"
    gtf_ref                         = "${params.dirs.genome}/gencode.v38.annotation.gtf"
    ribosomal_intervals_dir         = "${params.dirs.genome}"
    ribosomal_intervals_filename    = "ribo_intervals.txt"
    star_genome_dir                 = "${params.dirs.genome}/star_chr/"
    sequence_ref_dir                = "${params.dirs.genome}"
    fasta_file			    = "GRCh38.primary_assembly.genome.fa"
 }
}

// list the containers 
params {
 container {
   fastp = "${params.dirs.singularity}/fastp/0.20.1/fastp.sif"
   samtools = "${params.dirs.singularity}/samtools/1.12/samtools.sif"
   picard = "${params.dirs.singularity}/picard/2.25.3/picard.sif"
   star = "${params.dirs.singularity}/STAR/2.7.8a/STAR.sif"
   utils = "${params.dirs.singularity}/utils/v1/utils.sif"
   rsem = "${params.dirs.singularity}/RSEM/1.3.3/RSEM.sif"
   kallisto="${params.dirs.singularity}/kallisto/0.46.1/kallisto.sif"
  }

}